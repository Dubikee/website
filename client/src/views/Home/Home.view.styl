.home {
	position: absolute;
	// left 0
	// right: 0
	// top: 0
	// bottom: 0
	height: 100%;
	width: 100%;

	.form-row {
		position: relative;
		top: 20%;
		width: 100%;

		.form-col {
			padding-top: 30px;
			padding-left: 15px;
			padding-right: 15px;
			padding-bottom: 20px;
			border: 1px solid #d9d9d9;
			border-radius: 10px;

			>h1 {
				text-align: center;
				font-weight: 200;
				font-size: 28px;
				letter-spacing: 2px;
				margin: 0;
				padding: 0;
				line-height: 30px;
				margin-bottom: 30px;
			}

			.login-form {
				.form-item-last {
					margin-bottom: 0px;
				}

				.login-form-button {
					margin-top: 20px;
					width: 100%;
				}
			}
		}
	}
}
